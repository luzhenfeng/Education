<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MissingConstraints"
    android:background="@color/color_F5F5F5">

    <com.lzf.education.ui.view.MyActionBar
        android:id="@+id/myActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="180px"
        app:layout_constraintTop_toBottomOf="@id/myActionBar"
        app:tabIndicatorColor="@color/color_6BB978"
        app:tabIndicatorHeight="2px"
        app:tabSelectedTextColor="@color/black"
        app:tabTextColor="@color/color_666666"
        android:background="@color/white">

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="未上传" />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="已上传" />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="全部" />
    </android.support.design.widget.TabLayout>

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:background="@drawable/bg_solid_6bb978_corner_20"
        android:text="一键上传"
        android:textColor="@color/white"
        android:textSize="55px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100px"
        android:layout_marginLeft="278px"
        android:layout_marginRight="278px"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_file"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        android:layout_marginBottom="340px"
        android:layout_marginTop="395px"/>


</android.support.constraint.ConstraintLayout>