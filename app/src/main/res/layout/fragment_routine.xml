<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.frame.RoutineFragment"
    android:paddingTop="22px">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:paddingLeft="32px"
        android:paddingRight="32px"
        android:gravity="center_vertical"
        android:background="@color/white">
        <ImageView
            android:layout_width="50px"
            android:layout_height="54px"
            android:src="@drawable/inspect10"
            android:layout_marginRight="20px">

        </ImageView>
        <TextView
            android:id="@+id/tv_student_name"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="违规学生"
            android:textSize="48px"
            android:textColor="@color/black">

        </TextView>
        <ImageView
            android:id="@+id/iv_add_student"
            android:layout_width="76px"
            android:layout_height="match_parent"
            android:src="@drawable/inspect9">

        </ImageView>
    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/color_EBEBEB" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_check_title"
            android:layout_width="328px"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingLeft="60px"
            android:paddingRight="60px">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_marginTop="10px"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="34px"
                    android:layout_height="39px"
                    android:src="@drawable/inspect7"
                    android:layout_marginRight="20px">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="46px"
                    android:text="地面及卫生工具(11项)">

                </TextView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/color_EBEBEB">

            </View>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_check_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>